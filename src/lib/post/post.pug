- const width = "600"
- const height = "130"
- const viewBox = `0 0 ${width} ${height}`
- const lightGray = "#d1cee3"
- const gray = "#8b919e"
- const blue = "#2563eb"

svg(fill="none" viewBox=viewBox width=width height=height xmlns="http://www.w3.org/2000/svg")
  //- frame outline
  rect(x="0" y="0" width=width height=height stroke=lightGray strokeWidth="2" rx="10" ry="10")

  //- title info
  g(transform="translate(20 35)")
    a( href=url)
      text(x="0" y="0" fill=blue font-size="20" font-family="sans-serif")=title
    g(transform="translate(0 25)")
      path(transform="translate(0 -15)" fill='#a95ede' d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0ZM1.5 8a6.5 6.5 0 1 0 13 0 6.5 6.5 0 0 0-13 0Zm7-3.25v2.992l2.028.812a.75.75 0 0 1-.557 1.392l-2.5-1A.751.751 0 0 1 7 8.25v-3.5a.75.75 0 0 1 1.5 0Z")
      text(x="18" y="0" fill='#a95ede' font-size="16" font-family="sans-serif")=date+' '+timeago
    text(x="0" y="50" fill='#7dce13' font-size="16" font-weight="600" font-family="sans-serif")=tags.map(tag=>'#'+tag).join(' ')
    text(x="0" y="75" fill=gray font-size="16" font-family="sans-serif")=intro
